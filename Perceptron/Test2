close all; clear all; clc % Limpa tela
variaveis;
Amostras = xlsread(x; y; classes);
tam = size(Amostras);
tamLinha1 = tam(1);
tamCol1 = tam(2); 
classes = Amostras(:,tamCol1);
amostra = Amostras;
amostra(:,2:end) = Amostras(:,1:end-1);
amostra(:,1) = -1;
pesos = rand(1, tamCol1);
taxaDeAprendizagem = (2*tamLinha1*tamCol1);
taxaDeAprendizagem = 1/taxaDeAprendizagem;
epocas 0;
T = 0
i = 1
for i = 1:tamLinha1
	erro = 1;
	while erro == 1
		u = amostra(1, :)*w1;
		if(u >= 0)
			output = 1;
		else 
			output = -1;
		end
		if(output ~= classes(i,1))
			errox = classes(i, 1) - output;
			variacao = taxaDeAprendizagem*errox*amostra(i, :);
			pesos = pesos + variacao;
			erro = 1
		else
			erro = 0;
		end
		epocas = epocas + 1;
	end
	i = i + 1;
end
disp('O peso vale: ')
disp(peso)
disp('Qntidade de epocas: ')
disp(epocas);
if(erro == 0)
	disp('NÃ£o houve erro');
end

dados = xlsread(x; y);
tam = size(dados);
tamLinha2 = tam(1, 1);
tamCol2 = tam(1, 2);
i = 1;
dado = ones(tamLinha2, tamCol2+1);
dado(:,1) = -1;
dado(:,2:end) = dados(:,1:end);
for i = 1:tamLinha2
	u = dado(1, :)*w';
	if(u >= 0)
		output = 1;
	else
		output = -1;
	end
	i = i + 1;
end
