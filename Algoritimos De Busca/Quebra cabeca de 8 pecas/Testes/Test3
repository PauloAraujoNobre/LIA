import numpy as np
#sys.setrecursionlimit(1500)

def descobreInteracao(izero, jzero, a, b):

    #1 = Cima
    #2 = Direita
    #3 = Baixo
    #4 = Esquerda

    if izero < a:
        interacaoAnterior = 3
    elif izero > a:
        interacaoAnterior = 1
    elif jzero < b:
        interacaoAnterior = 2
    elif jzero > b:
        interacaoAnterior = 4

    return interacaoAnterior

def verifica(teste):
    matrix = teste
    erro = 0
    count = 0
    for i in range(3):
        for j in range(3):
            if matrix[i, j] != count:
                erro = 1
            count = count+1

    return erro

def encontraZero(teste):
    matrix = teste
    for i in range(3):
        for j in range(3):
            if matrix[i, j] == 0:
                return (i, j)

def criaMatrix():
    repeat = np.array([])

    while (len(repeat) < 9):
        flag = 0
        x = int(np.random.uniform(0, 9))

        if x == 9:
            x = 8

        for j in range(len(repeat)):
            if x == repeat[j]:
                flag = 1

        if flag == 0:
            repeat = np.insert(repeat, 0, x)

    matrix = np.zeros((3, 3))

    k = 0
    for i in range(3):
        for j in range(3):
            matrix[i, j] = repeat[k]
            k = k+1

    #print(matrix)

    return matrix

def encontraCaminhos(teste, izero, jzero, interacaoAnterior):
    interacaoAnterior = interacaoAnterior
    #print(interacaoAnterior)
    matrix = teste
    i = izero
    j = jzero
    k = 0
    count = 0
    caminhos = np.array([])
    if i+1 < 3 and interacaoAnterior != 1 :
        caminhos = np.insert(caminhos, k, (i+1, j))
        k = k + 2
        count = count + 1
        #print(caminhos)
        #print("1")

    if i-1 > -1 and interacaoAnterior != 3:
        caminhos = np.insert(caminhos, k, (i-1, j))
        k = k + 2
        count = count + 1
        #print(caminhos)
        #print("2")

    if j+1 < 3 and interacaoAnterior != 4:
        caminhos = np.insert(caminhos, k, (i, j+1))
        k = k + 2
        count = count + 1
        #print(caminhos)
        #print("3")

    if j-1 > -1 and interacaoAnterior != 2:
        caminhos = np.insert(caminhos, k, (i, j-1))
        k = k + 2
        count = count + 1
        #print(caminhos)
        #print("4")

    alavanca = np.random.uniform(0, 10)
    if alavanca > 5:

        if count == 2:
            aux1 = caminhos[2]
            aux2 = caminhos[3]

            caminhos[2] = caminhos[0]
            caminhos[3] = caminhos[1]

            caminhos[0] = aux1
            caminhos[1] = aux2

        if count == 3:
            aux1 = caminhos[4]
            aux2 = caminhos[5]

            caminhos[4] = caminhos[2]
            caminhos[5] = caminhos[3]

            caminhos[2] = caminhos[0]
            caminhos[3] = caminhos[1]

            caminhos[0] = aux1
            caminhos[1] = aux2

        if count == 4:
            aux1 = caminhos[6]
            aux2 = caminhos[7]

            caminhos[6] = caminhos[4]
            caminhos[7] = caminhos[5]

            caminhos[4] = caminhos[2]
            caminhos[5] = caminhos[3]

            caminhos[2] = caminhos[0]
            caminhos[3] = caminhos[1]

            caminhos[0] = aux1
            caminhos[1] = aux2

    #print(caminhos)
    return caminhos, count

def troca(teste, caminhos, izero, jzero, qntCaminhos, limite, matrixSafe):
    matrixSafe = matrixSafe
    matrix = teste
    caminho = caminhos
    i = izero
    j = jzero
    k = 0
    l = 1
    tam = qntCaminhos
    for p in range(tam):
        matrixAux = np.copy(matrix)
        a = int(caminho[k])
        b = int(caminho[l])
        aux = matrixAux[i, j]
        matrixAux[i, j] = matrixAux[a, b]
        matrixAux[a, b] = aux
        k = k + 2
        l = l + 2
        print(matrixAux)
        erro = verifica(matrix)
        if erro == 0:
            print("Acertou")
